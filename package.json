		"@types/node": "^24.0.10",
		"@types/supertest": "^6.0.3",
		"jest": "^30.0.4",
		"nodemon": "^3.1.7",
		"prettier": "^3.6.2",
		"supertest": "^7.1.3",
		"ts-jest": "^29.4.0",
		"ts-node": "^10.9.2",
